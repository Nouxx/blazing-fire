{
  "globalEnv": ["CI"],
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".svelte-kit/**", ".vercel/**"],
      "env": ["SUPABASE_ANON_KEY", "SUPABASE_URL", "PUBLIC_ENVIRONMENT", "VERCEL_DEPLOY"]
    },
    "lint": {
      "env": ["SUPABASE_URL", "SUPABASE_SERVICE_ROLE_KEY"]
    },
    "format:check": {},
    "format:fix": {},
    "test:unit": {},
    "test:e2e": {
      "env": ["SUPABASE_URL", "SUPABASE_SERVICE_ROLE_KEY", "VERCEL_DEPLOY"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}

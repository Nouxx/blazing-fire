{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format && prettier --write .",
    "check-format": "turbo run check-format && prettier --check .",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "nuke": "find . -name 'node_modules' -type d -exec rm -rf '{}' +",
    "reset": "pnpm run nuke && pnpm install"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "turbo": "^1.13.0"
  },
  "packageManager": "pnpm@8.9.2"
}
